@model APP.UI.Controllers.Area

@{
    ViewBag.Title = "Delete";
}

<nav class="navbar fixed-top">
    <div class="row w-100">
        <div class="col-md-2 align-self-center">
            <a href="@Url.Action("Index")"><i class="fa fa-arrow-alt-circle-left"></i> Volver</a>
        </div>
        <div class="col-md-8">
            <h4 class="text-center text-white p-0 m-0">Eliminar Área</h4>
        </div>
    </div>
</nav>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="row justify-content-center">
            <div class="col-md-12 text-danger">
                <h4 class="text-center">Area</h4>
            </div>
        </div>
        <hr />
        <div class="dl-horizontal">
            <div class="row justify-content-center">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.Nombre)
                </div>
            </div>

            <div class="row justify-content-center pt-3">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.Descripcion)
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group mt-5">
        <div class="row justify-content-center">
            <div class="col-md-2">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $('body').toggleClass('main');
    });
</script>
