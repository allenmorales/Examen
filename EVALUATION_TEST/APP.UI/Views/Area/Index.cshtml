@model IEnumerable<APP.UI.Controllers.Area>

@{
    ViewBag.Title = "View";
}




<nav class="navbar fixed-top">
    <div class="row w-100">
        <div class="col-md-2 align-self-center">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-bars"></i> Menu</a>
            </li>
        </div>
        <div class="col-md-8">
            <h4 class="text-center text-white p-0 m-0">Áreas</h4>
        </div>
        <div class="col-md-2 align-self-end">
            <a href="@Url.Action("Create")"><i class="fa fa-plus-circle"></i> Crear Nuevo</a>
        </div>
    </div>
</nav>

<table class="table info_grid" id="contenttable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <i class="fa fa-edit pr-1" aria-hidden="true"></i>@Html.ActionLink("Editar", "Edit", new { id = item.IdArea }) |
                    <i class="fa fa-trash pr-1"></i>@Html.ActionLink("Borrar", "Delete", new { id = item.IdArea })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('body').toggleClass('main');
    });

    $(document).ready(function () {
        $('#contenttable').DataTable({
            "searching": true
        });
    });
</script>
