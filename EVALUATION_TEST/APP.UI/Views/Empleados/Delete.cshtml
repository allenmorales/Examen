@model APP.UI.Controllers.Empleado

<nav class="navbar fixed-top">
    <div class="row w-100">
        <div class="col-md-2 align-self-center">
            <a href="@Url.Action("Index")"><i class="fa fa-arrow-alt-circle-left"></i> Volver</a>
        </div>
        <div class="col-md-8">
            <h4 class="text-center text-white p-0 m-0">Eliminar Empleado</h4>
        </div>
    </div>
</nav>


<div class="row justify-content-center">
    <div class="col-md-6">
        <h3 class="text-center">Are you sure you want to delete this?</h3>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="row justify-content-center">
            <div class="col-md-12 text-danger">
                <h4 class="text-center">Empleado</h4>
            </div>
        </div>
        <hr />
        <div class="dl-horizontal">
            <div class="row justify-content-center">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.NombreCompleto)
                </div>
            </div>

            <div class="row justify-content-center pt-3">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Cedula)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.Cedula)
                </div>
            </div>

            <div class="row justify-content-center pt-3">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Correo)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.Correo)
                </div>
            </div>

            <div class="row justify-content-center pt-3">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </div>
            </div>

            <div class="row justify-content-center pt-3">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.FechaIngreso)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.FechaIngreso)
                </div>
            </div>

            <div class="row justify-content-center pt-3">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Foto)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.Foto)
                </div>
            </div>

            <div class="row justify-content-center pt-3">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Area.Nombre)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.Area.Nombre)
                </div>
            </div>

            <div class="row justify-content-center pt-3">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Empleado2.NombreCompleto)
                </div>

                <div class="col-md-9 text-danger">
                    @Html.DisplayFor(model => model.Empleado2.NombreCompleto)
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group mt-5">
        <div class="row justify-content-center">
            <div class="col-md-2">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script>
    $(document).ready(function () {
        $('body').toggleClass('main');
    });
</script>
